{
  "name": "no-bundle-scoper",
  "version": "2.0.4",
  "packageManager": "pnpm@10.14.0",
  "description": "An esbuild plugin handle the path alias(es) when you don't want to bundle your source file(s).",
  "license": "MIT",
  "author": "Peyton Lu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SigismundBT/no-bundle-scoper.git"
  },
  "bugs": {
    "url": "https://github.com/SigismundBT/no-bundle-scoper/issues"
  },
    "homepage": "https://github.com/SigismundBT/no-bundle-scoper#readme"
  ,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "dev": "pnpm run build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "node build.mjs",
    "build": "pnpm run build:types && pnpm run build:js",
    "format": "prettier --write .",
    "release": "bumpp --commit --tag",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.0",
    "@vitest/ui": "^3.2.4",
    "bumpp": "^10.2.2",
    "chalk": "^5.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "es-module-lexer": "^1.7.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "p-limit": "^6.2.0",
    "tsconfck": "^3.1.6"
  },
  "peerDependencies": {
    "esbuild": "^0.19.0 || ^0.20.0 || ^0.21.0"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": false
    }
  }
}
