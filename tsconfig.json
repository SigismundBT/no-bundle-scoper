{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*", "**/*.test.ts", "**/*.spec.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
