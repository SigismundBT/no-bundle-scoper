{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@app2/*": ["src/utils/*"],
      "@test": ["src/utils/t3.ts"]
    }
  },
  "include": ["src/**/*", "index copy.ts"],
  "exclude": ["node_modules", "dist"]
}
